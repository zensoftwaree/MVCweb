@model WebPortfolio.Models.SendModel

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
                
        @Html.ValidationSummary(true)
        <h1>Написать нам</h1>
        <div class="form-group">
            <p>@Html.LabelFor(model => model.Name, new { @class = "control-label col-sm-3" })</p>
            <div class="col-sm-7">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            <p>@Html.LabelFor(model => model.Email, new { @class = "control-label col-sm-3" })</p>
            <div class="col-sm-7">
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="form-group">
            <p>@Html.LabelFor(model => model.Telefone, new { @class = "control-label col-sm-3" })</p>
            <div class="col-sm-7">
                @Html.EditorFor(model => model.Telefone)
                @Html.ValidationMessageFor(model => model.Telefone)
            </div>
        </div>

        <div class="form-group">
            <p>@Html.LabelFor(model => model.Text, new { @class = "control-label col-sm-3" })</p>
            <div class="col-sm-7">
                @Html.EditorFor(model => model.Text)
                @Html.ValidationMessageFor(model => model.Text)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-sm-3">
                <input type="submit" id="send" class="btn btn-primary btn-lg" value="Отправить">
            </div>
        </div>
        <hr />
    </div>
}
